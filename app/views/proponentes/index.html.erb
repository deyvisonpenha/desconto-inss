<h1 class="text-2xl font-bold mb-4">Proponentes</h1>

<%= link_to 'Novo Proponente', new_proponente_path, class: 'inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 mb-3' %>
<div class="overflow-x-auto">
  <table class="min-w-full border-collapse border border-gray-200">
    <thead>
      <tr class="bg-gray-100">
        <th scope="col" class="px-6 py-3 border border-gray-200 text-left">Nome</th>
        <th scope="col" class="px-6 py-3 border border-gray-200 text-left">CPF</th>
        <th scope="col" class="px-6 py-3 border border-gray-200 text-left">Salário</th>
        <th scope="col" class="px-6 py-3 border border-gray-200 text-left">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @proponentes.each do |proponente| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 border border-gray-200"><%= proponente.nome %></td>
          <td class="px-6 py-4 border border-gray-200"><%= proponente.cpf %></td>
          <td class="px-6 py-4 border border-gray-200">R$ <%= number_to_currency(proponente.salario, unit: '') %></td>
          <td class="flex flex-col items-center gap-2">
            <%= link_to 'Editar', edit_proponente_path(proponente), class: 'inline-block px-3 py-1 bg-yellow-500 text-black rounded hover:bg-yellow-600' %>
            <%= button_to 'Excluir', proponente_path(proponente), method: :delete, data: { turbo_confirm: 'Tem certeza?' }, class: 'inline-block px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @proponentes %>
